# Variables
CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic
RM = rm -f
DEPS = m.h

# Rule to build the executable
all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $@

# Rule to compile source files into object files
%.o: %.c $(DEPS)
	$(CC) -c $< -o $@ $(CFLAGS)

# Rule to clean Emacs and Vim temporary files along with the executable
clean:
	$(RM) *~ .*~ *.swp *.swo $(NAME)

# Rule to delete object files
oclean:
	$(RM) $(OBJ)

# Rule to delete Emacs and Vim temporary files, the executable, and the object files
fclean: clean oclean

# Rule to force recompilation of all source files
re: fclean all

# Ensure that clean, oclean, fclean, and re rules never fail
.PHONY: all clean oclean fclean re
